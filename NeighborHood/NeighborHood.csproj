<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Selenium.WebDriver" Version="4.15.0" />
    <PackageReference Include="Selenium.WebDriver.ChromeDriver" Version="119.0.6045.10500" />
  </ItemGroup>

  <Target Name="CopyWebDriver" AfterTargets="Build">
    <PropertyGroup>
      <ChromeDriverPath>$(NuGetPackageRoot)selenium.webdriver.chromedriver\117.0.5938.9200\driver\win32\chromedriver.exe</ChromeDriverPath>
    </PropertyGroup>
    <Copy SourceFiles="$(ChromeDriverPath)" DestinationFolder="$(OutDir)" SkipUnchangedFiles="true" />
  </Target>

</Project>
